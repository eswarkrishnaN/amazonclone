<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smartphones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@color/white"
    android:contextClickable="false"
    android:elevation="3dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/smart_phones"
        android:textColor="@color/black"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smartphones_image1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one"/>
        <ImageView
            android:id="@+id/smartphones_image2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one"/>


    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/smartphones_text1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/smart_samsung"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/smartphones_text2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/smart_iphone"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smartphones_image11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one"/>
        <ImageView
            android:id="@+id/smartphones_image12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/one"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/smartphones_text11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/smart_oneplus"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/smartphones_text12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/smart_Redmi"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#c0c0c0"/>

    <TextView
        android:id="@+id/see_all_smartphoens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:drawableEnd="@drawable/arrow"
        android:text="@string/seeall"/>



</LinearLayout>